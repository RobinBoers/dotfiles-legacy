general {
        colors = false 
        markup = pango
        interval = 3
        output_format = "i3bar"
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

#order += "ipv6"
#order += "disk /"
order += "wireless _first_"
#order += "ethernet _first_"
order += "volume master"
order += "battery all"
#order += "load"
#order += "memory"
order += "tztime local"
#order += "cpu_usage"

wireless _first_ {
        format_up = " %essid: %ip "
        format_down = "<span color='red'> Disconnected </span>"
}

ethernet _first_ {
        format_up = " %ip (%speed) "
        format_down = "<span color='red'> Disconnected </span>"
}

battery all {
        format = " %status %percentage "
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

cpu_usage {
        format = "CPU %usage {%cpu0 %cpu1}"
        max_threshold = 75
}

volume master {
        format = " â™ª %volume "
        format_muted = " â™ª muted (%volume) "
}

disk "/" {
        format = " %avail Available "
}

load {
        format = " ðŸ”¥ %5min Load "
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = " %time "
        format_time = "%d-%m-%Y %H:%M"
}
