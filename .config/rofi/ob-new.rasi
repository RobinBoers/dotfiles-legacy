/*
 *
 * Rofi theme made by Robijntje. Made to look like the Unity Dash.
 *
 */

configuration {
	  font:							"Noto Sans Bold 10";
    show-icons:                     true;
    display-drun: 					"";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	  hide-scrollbar: 				true;
	  sidebar-mode: 					false;
}

* {
    background:                     #00000000;
    background-alt:              	#00000000;
    background-bar:                 #1c000c50;
    foreground:                     #f2f2f2EE;
    accent:			            	#3DAEE966;
}

window {
    transparency:                   "real";
    text-color:                     @foreground;
    background-color: #00000020;
    border:							0% 0.1% 0.1% 0%;
    border-radius:                  0% 0% 20px 0%;
	  border-color:					#00000050;
    padding: 0% 5% 5% 0%;
	  width:							45%;
    anchor:     north west;
    location:   north west;
    y-offset: 25px;
    x-offset: 66px;
}

prompt {
    enabled: 						true;
	  padding: 						0.50% 0% 0% 0%;
	  background-color: 				@background-alt;
	  text-color: 					@foreground;
    font:							"Font Awesome 5 Free 13";
}

textbox-prompt-colon {
content: "ï€‚";
background-color: 				@background-alt;
text-color: 					@foreground;
expand: false;
padding: 						-0.5% 0.6% 0% 0%;
font:							"Font Awesome 5 Free 17";
}

entry {
    background-color:               @background-alt;
    text-color:                     @foreground;
    placeholder-color:              @foreground;
    expand:                         true;
    horizontal-align:               0;
    padding: 						-0.8% 0% 0% 0%;
    placeholder:                    "Search...";
    font:							"Noto Sans Italic 15";
}

inputbar {
  	children: 						[ textbox-prompt-colon, entry ];
    background-color:               @background-bar;
    text-color:                     @foreground;
    expand:                         false;
	  border:							0.1%;
    border-radius:                  3px;
	  border-color:					#ffffff;
    margin:                         0% 0% 0% 0%;
    padding:                        12px;
}

listview {
    background-color:               @background-alt;
    columns:                        5;
    lines:                          3;
    spacing:                        0%;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background-alt;
    border-radius:                  0% 0% 0% 0%;
    children:                       [ inputbar, listview ];
    spacing:                       	2%;
    padding:                        2% 1% 2% 1%;
     background-color:               #1c1c1c70;
         border:							0% 0.1% 0.1% 0%;
   	border-color:					#1c1c1c; /*#1c00078, #ffb04a50*/
    }

element {
    background-color:               @background-alt;
    text-color:                     @foreground;
    orientation:                    vertical;
    border-radius:                  0%;
    padding:                        2% 0% 2% 0%;
}

element-icon {
    size:                           64px;
    border:                         0px;
    color: white;
    background-color: @background;
    align: center;
    position: center;
}

element-text {
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
    color: white;
    background-color: @background;
}

element selected {
    background-color:               @background-bar;
    text-color:                     @foreground;
	  border:							0% 0% 0% 0%;
    border-radius:                  12px;
    border-color:                  	@accent;
}
